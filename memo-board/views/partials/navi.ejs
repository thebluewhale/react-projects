<nav class="w3-sidenav w3-white w3-card-2" style="display:none" id="mySidenav">
	<a href="javascript:void(0)" onclick="w3_close()" class="w3-closenav w3-large">Close &times;</a>
	<a href="/">Home</a>
	<% if(isAuthenticated) { %>
		<a href="/logout">Log Out</a>
		<a href="/account/<%= currentUser.userid %>">My Account</a>
	<% } else { %>
		<a href="/login">Log In</a>
		<a href="/account/create">Create Account</a>
	<% } %>
	<a href='/posts'>Posts</a>
	<% if(isAuthenticated && currentUser.userid == 'master') { %>
		<a href='/allusers'>All Users<a>
	<% } %>
</nav>

<div class="w3-container w3-teal">
	<span class="w3-opennav w3-xlarge w3-center" onclick="w3_open()">&#9776;</span>
	<h1 class="w3-center"><b>Node.js Project</b></h1>
</div>

<script>
	function w3_open() {
	    document.getElementById("mySidenav").style.display = "block";
	}
	function w3_close() {
	    document.getElementById("mySidenav").style.display = "none";
	}
</script>
